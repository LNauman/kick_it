<div class="unfinished"><h1>Unfinished Business</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
      </tr>
    </thead>

    <tbody>
        <% @bucket_lists.each do |list| %>
        <% if list.complete? == false %>
          <tr>
            <td class="list-item"><%= link_to "#{list.title}", list %></td> 
            <!-- this is thw show action -->
            <td><%= link_to 'Edit', edit_bucket_list_path(list) %></td>
            <td><%= link_to 'x', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

<%= link_to 'New List', new_bucket_list_path %>
<div>

<% if @completed_bucket_lists.count != 0 %>

<div class="finished">
  <h1>Completed</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
        </tr>
      </thead>

      <tbody>
        <% @completed_bucket_lists.each do |list| %>
          <tr>
            <td class="list-item"><%= list.title %></td>
            <td><%= link_to 'Show', list %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
